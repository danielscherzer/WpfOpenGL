<Window x:Class="Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:WpfOpenGL="clr-namespace:WpfOpenGlControl;assembly=WpfOpenGlControl" 
        Title="MainWindow" Height="350" Width="525" SnapsToDevicePixels="True">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="5" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>
		<Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="5">
			<WpfOpenGL:WpfOpenGLControl x:Name="glControl"/>
		</Border>
		<Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="5">
			<WpfOpenGL:WpfOpenGLControl x:Name="glControl2"/>
		</Border>
		<GridSplitter Grid.Row="0" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
		<GridSplitter Grid.Row="1" Grid.Column="1" Width="5" HorizontalAlignment="Stretch" />
		<Border Grid.Row="0" Grid.Column="2" BorderBrush="Black" BorderThickness="5">
			<WpfOpenGL:WpfOpenGLControl x:Name="glControl1"/>
		</Border>
		<Border Grid.Row="1" Grid.Column="2" BorderBrush="Black" BorderThickness="5">
			<WpfOpenGL:WpfOpenGLControl x:Name="glControl3"/>
		</Border>
	</Grid>
</Window>
